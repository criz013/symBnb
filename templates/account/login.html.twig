{% extends 'base.html.twig' %}

{% block title %}Page de connection{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="bg-light py-3 px-3">
                <h1>Connection</h1>
                {% if hasError %}
                    <div class="alert alert-danger">Une erreur est survenue, le mot de passe est mauvais ou l'identifiqnt</div>
                {% endif %}
                <form action="{{ path("account_login") }}" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="mail" name="_username" id="email" class="form-control" place placeholder="Email...." value="{{ username }}" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
